---
import { getEntry, render } from "astro:content";
import FactorySettingsSetting from './_setting.component.astro';

interface Props {
    id: string;
}

const { slug } = Astro.props;
const entry = await getEntry('factory-settings', slug);
const { Content } = await render(entry);
---
<div class="mb-5">
    <h3 class="flex items-center relative">
        {entry.data.section}
    </h3>

    {entry.data.settings && (
        <div>
            {entry.data.settings?.map(setting => (
                <FactorySettingsSetting section={entry.data.section} setting={setting}></FactorySettingsSetting>
            ))}
        </div>
    )}

    <Content />
</div>
