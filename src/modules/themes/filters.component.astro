---
import ThemesFiltersItem from './filters-item.component.astro';
import type { ITag } from './tag.model';

interface Props {
    tags: ITag[];
    mode: "desktop" | "mobile";
}

const { tags, mode = 'desktop', labelClassName } = Astro.props;

---
{tags.map(tag => (
    <ThemesFiltersItem tag={tag} mode={mode} labelClassName={labelClassName}></ThemesFiltersItem>
))}
