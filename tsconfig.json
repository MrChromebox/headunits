{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "jsx": "preserve",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@content/*": ["src/content/*"],
      "@pages/*": ["src/pages/*"],
      "@shared/*": ["src/shared/*"]
    }
  },
  "include": [
    ".astro/types.d.ts",
    "astro.config.ts",
    ".eslintrc.cjs",
    "tailwind.config.ts",
    "src"
  ],
  "exclude": ["dist"]
}
