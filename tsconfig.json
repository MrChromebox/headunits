{
  "extends": "astro/tsconfigs/strictest",
  "compilerOptions": {
    "jsx": "preserve",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@content/*": ["src/content/*"],
      "@pages/*": ["src/pages/*"],
      "@shared/*": ["src/shared/*"]
    }
  },
  "include": [
    "src",
    "astro.config.mjs",
    ".eslintrc.cjs",
    "tailwind.config.ts",
    "**/*.js",
    "**/*.ts",
    "**/*.cjs",
    "**/*.mjs"
  ]
}
